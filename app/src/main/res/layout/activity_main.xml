<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Mapa Principal - Ocupa toda a tela -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Toolbar Superior com degradê -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        app:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_dark_card"
            app:title="Walking Territory"
            app:titleTextColor="@color/white">

            <!-- Botões de ação no toolbar -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Status de pontos compacto com degradê -->
                <TextView
                    android:id="@+id/tvPointsCompact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 pts"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="@drawable/gradient_gray_card"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp" />

                <!-- Botão leaderboard simplificado (texto apenas) -->
                <TextView
                    android:id="@+id/btnLeaderboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ranking"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- FAB Minha Localização com degradê -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:src="@android:drawable/ic_menu_mylocation"
        android:contentDescription="Minha Localização"
        app:tint="@color/white"
        app:backgroundTint="@color/gray_dark"
        app:elevation="6dp" />

    <!-- Status de Captura de Território com degradê -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/territoryCapturingCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="80dp"
        android:visibility="gone"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/gradient_status_card"
            android:gravity="center_vertical">

            <!-- Removido ícone, apenas indicador simples -->
            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@color/black"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTerritoryProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capturando território..."
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <ProgressBar
                    android:id="@+id/progressTerritoryCapture"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="4dp"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/black" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom Sheet com informações principais -->
    <include layout="@layout/bottom_sheet_main_info" />

    <!-- FAB Principal com degradê melhorado -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabStartWalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="120dp"
        android:text="Iniciar Caminhada"
        android:textColor="@color/white"
        app:backgroundTint="@color/black"
        app:elevation="8dp" />

    <!-- Warning GPS com degradê -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/gpsWarningCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/gradient_status_card"
            android:gravity="center_vertical">

            <!-- Indicador de aviso simplificado -->
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@color/black"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPS Necessário"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ative o GPS para usar o app"
                    android:textSize="12sp"
                    android:textColor="@color/gray_medium" />

            </LinearLayout>

            <Button
                android:id="@+id/btnEnableGps"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ativar"
                android:textColor="@color/black" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
